<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiseZNOYear">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="20dp"
                android:onClick="finish"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>

            <TextView
                android:typeface="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ЗНО попередніх років"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2019"
            android:textSize="30sp"
            android:textStyle="bold|italic"/>

    <Button
        android:typeface="serif"
        android:onClick="Choise"
        android:id="@+id/main2019"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ЗНО 2019 року з української літератури – основна сесія"
        android:padding="7dp"
        android:background="@drawable/sumabutton2"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:typeface="serif"
        android:onClick="Choise"
        android:id="@+id/additional2019"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ЗНО 2019 року з української літератури – додаткова сесія"
        android:padding="7dp"
        android:background="@drawable/sumabutton2"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="15dp"/>

        <TextView
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018"
            android:textSize="30sp"
            android:textStyle="bold|italic"/>

