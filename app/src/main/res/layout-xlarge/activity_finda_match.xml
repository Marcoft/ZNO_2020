<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    style="@style/AppTheme"
    android:background="#ffffff"
    tools:context=".FindaMatch">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:onClick="finish"
            android:layout_marginLeft="20dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/back"/>

        <TextView
            android:textColor="#000"
            android:layout_gravity="center"
            android:typeface="serif"
            android:textStyle="bold"
            android:id="@+id/moves"
            android:text="Знайди відповідність"
            android:textSize="43sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:id="@+id/life"
        android:layout_below="@id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerInParent="true"
            android:typeface="serif"
            android:id="@+id/RESULT_SCORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="60sp"/>

        <ImageView
            android:layout_toStartOf="@id/life2"
            android:id="@+id/life1"
            android:layout_marginEnd="10dp"
            android:src="@drawable/life_in"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <ImageView
            android:layout_toStartOf="@id/life3"
            android:id="@+id/life2"
            android:layout_marginEnd="10dp"
            android:src="@drawable/life_in"
            android:layout_width="80dp"
            android:layout_height="80dp"
           />

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/life3"
            android:src="@drawable/life_in"
            android:layout_width="80dp"
            android:layout_height="80dp"
           />

    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:typeface="serif"
            android:id="@+id/Question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Знайдіть відповідність між автором та твором"
            android:textColor="#000000"
            android:textSize="40sp"/>

    </LinearLayout>


    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


